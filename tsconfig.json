{
  "compilerOptions": {
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "target": "ES6",
    "types": ["reflect-metadata", "jest", "node", "@types/jest"],
  },
  "include": [
    "./src/**/*.ts",
    "./tests/**/*.ts"
  ]
}
